TARGET = benchmark
LIBS = -lusb ../../usbutil/libusbutil.a

CC_SRCS = $(shell ls *.c)
CC_OBJS = $(CC_SRCS:%.c=$(OBJDIR)/%.o)
CC = gcc
CFLAGS = -O3 -Wall -Wextra -Wstrict-prototypes -Wundef -std=c99 -pedantic-errors -I../../usbutil
LDFLAGS = -Wl,--relax -Wl,--gc-sections
OBJDIR = .build
DEPDIR = .deps

all: $(TARGET)

$(TARGET): $(CC_OBJS)
	$(CC) $(LDFLAGS) -Wl,-Map=$(OBJDIR)/$(TARGET).map,--cref -o $(TARGET) $(CC_OBJS) $(LIBS)
	strip $(TARGET)

$(OBJDIR)/%.o : %.c
	$(CC) -c $(CFLAGS) -MMD -MP -MF $(DEPDIR)/$(@F).d -Wa,-adhlns=$(OBJDIR)/$<.lst $< -o $@

clean: FORCE
	rm -rf $(OBJDIR) $(TARGET) $(DEPDIR)

install: $(TARGET)
	install $(TARGET) ../bin/

-include $(shell mkdir -p $(OBJDIR) $(DEPDIR) 2>/dev/null) $(wildcard $(DEPDIR)/*)

FORCE:
